{
  "name": "azuki",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "generate:migrations": "drizzle-kit generate:sqlite",
    "migrate:local": "pnpm generate:migrations && wrangler d1 migrations apply azuki-db --local",
    "migrate:prod": "pnpm generate:migrations && wrangler d1 migrations apply azuki-db",
    "dev:db": "pnpm migrate:local && wrangler dev --port 8787",
    "dev:app": "remix vite:dev",
    "build": "remix vite:build",
    "start": "http-server build/client/",
    "deploy:prod": "pnpm build && wrangler pages deploy build && wrangler deploy --minify app/rpc.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "fmt": "prettier ./app --write",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^2.5.1",
    "@remix-run/react": "^2.5.1",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "hono": "^3.12.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@remix-run/dev": "^2.5.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": "20.9.0"
  },
  "volta": {
    "node": "20.9.0"
  }
}
